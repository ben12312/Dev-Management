<%- include('./partials/navbar') %>
<%- include('./partials/header', { title: "Developers", subTitle: ""}) %>

<body>
    <div class="mt-4 container">
        <h3>Add Dev</h3>
        
        <form method="POST">
            <div class="form-group">
              <label>Name</label>
              <input name="name" type="text" value="<%= dev.name %>" class="form-control">
            </div>
            <div class="form-group">
              <label >Email</label>
              <input name="email" type="email" value="<%= dev.email %>" class="form-control">
            </div>
            <div class="form-group">
              <label >Password</label>
              <input name="password" type="password" value="<%= dev.password %>" class="form-control" >
            </div>
            <div class="form-group">
                <label >Phone Number</label>
                <input name="phone_number" type="number" value="<%= dev.phone_number %>" class="form-control" >
              </div>
              <div class="form-group">
                <label>Git Username</label>
                <input name="git_username" type="text" value="<%= dev.git_username %>" class="form-control" >
              </div>
              <label>Gender </label>
              <div class="form-check">
                <input class="form-check-input" <%= dev.gender == 'male' ? 'checked' : '' %> value="male" type="radio" name="gender">
                <label class="form-check-label">
                  male
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" <%= dev.gender == 'female' ? 'checked' : '' %> value="female" type="radio" name="gender">
                <label class="form-check-label">
                  female
                </label>
              </div>

              <div class="form-group">
                <label >Role :</label>
                <select name="role" class="form-select" aria-label="Default select example">
                  <option <%= dev.role == 'CTO' ? 'selected' : '' %> value="CTO">CTO</option>
                  <option <%= dev.role == 'Developers' ? 'selected' : '' %> value="Developers">Developers</option>
                </select>
              </div>

            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
    </div>
</body>